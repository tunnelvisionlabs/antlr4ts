{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,
    "module": "commonjs",
    "target": "es2015",
    "lib": [
      "es6"
    ],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "experimentalDecorators": true,
    "declaration": true,
    "preserveConstEnums": true,
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "../runtime/dist/",
    "dist"
  ]
}
