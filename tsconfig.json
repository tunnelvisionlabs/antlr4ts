{
  "compilerOptions": {
    "outDir": "lib",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2015",
    "lib": [
      "es6"
    ],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "declaration": true,
    "preserveConstEnums": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "mocha"
    ],
    "baseUrl": ".",
    "paths": {
        "lib/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}
