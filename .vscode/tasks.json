{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "tsc",
      "problemMatcher": [
        "$tsc"
      ],
      "label": "npm: tsc",
      "detail": "tsc --build --verbose"
    },
    {
      "type": "npm",
      "script": "tsc-watch",
      "problemMatcher": [
        "$tsc-watch"
      ],
      "label": "npm: tsc-watch",
      "detail": "tsc --build --watch",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "script": "lint",
      "problemMatcher": [
        "$eslint-stylish"
      ],
      "label": "eslint: lint whole folder",
      "group": "build",
      "detail": "eslint . --ext .ts"
    }
  ]
}
